<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_regist_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_regist_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="密码"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/et_regist_pwdagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:hint="密码"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/bt_regist_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/btn_filled_blue_bg_pressed"
            android:text="注冊"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

</RelativeLayout>